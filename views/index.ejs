<!DOCTYPE html>
<html>
  <head>
    <title>Stackunderflow</title>

  </head>
  <body>
  <header>
    <a href="/users/login" class="nav_link">Login</a>
    <a href="/users/register" class="nav_link">Register</a>
    <a href="/questions/new" class="nav_link">New question</a>
    <div class="currentuser"><%= currentuser%></div>
    <form id="form" method="post" action="/questions/search">
      <input name="searchString" placeholder="Search...">
      <button>Search</button>
    </form>
  </header>


    <h1>Stackunderflow</h1>
   <%if(typeof message != 'undefined'){ %>
  <%- message %><%}%>

  <% if(questions.length){%>
    <h3> Top rated questions </h3>
    <table class="question_table">
      <thead>
      <tr><th>Title</th><th>Score</th><th>Posted by:</th></tr>
      </thead>
      <tbody>
      <% for(let x in questions){
      let entries = Object.entries(questions[x]);
     %>
        <tr>
          <td><a href="/questions/get/<%= entries[0][0]%>"><%= entries[0][1].Title %></a></td>
          <td><%= entries[0][1].Score%></td>
          <td><%= entries[0][1].OwnerUserId%></td>
        </tr>
      <%}%>
      </tbody>
    </table>
  <%
  }
  %>




  <footer>
    <a href="/about" class="nav_link">About</a>

  </footer>
  </body>
</html>
